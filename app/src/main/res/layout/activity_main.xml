<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mam.lambo.squarepants.MainActivity">

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Hello World!"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent"/>-->

    <LinearLayout
        android:layout_width="500sp"
        android:layout_height="500sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="200sp"
            android:layout_height="50sp">

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:text="FULL EVENTS"
                />

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:id="@+id/fullevents"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200sp"
            android:layout_height="40sp">

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:text="IMAGE EVENTS"
                />

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:id="@+id/imageevents"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200sp"
            android:layout_height="40sp">

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:text="LIDAR EVENTS"
                />

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:id="@+id/lidarevents"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200sp"
            android:layout_height="40sp">

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:text="GPS EVENTS"
                />

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:id="@+id/gpsevents"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200sp"
            android:layout_height="40sp">

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:text="IMU EVENTS"
                />

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:id="@+id/imuevents"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200sp"
            android:layout_height="40sp">

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:text="GPS POSITION"
                />

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:id="@+id/gpslat"
                />

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:id="@+id/gpslon"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200sp"
            android:layout_height="40sp">

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:text="INS POSITION"
                />

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:id="@+id/inslat"
                />

            <TextView
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:id="@+id/inslon"
                />

        </LinearLayout>

        <Button
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:id="@+id/exitthea"
            android:text="EXIT THEA"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
